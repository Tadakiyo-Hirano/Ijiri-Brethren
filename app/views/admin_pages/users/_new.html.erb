<% provide(:class_text, 'new') %>
<% provide(:button_text, '新規登録') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header", style="border:none">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <h3 class="modal-title center">メンバー情報新規登録</h3>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-12 col-md-offset-1">
          <%= form_with(model: @user, url: admin_pages_users_path(@user), html: { method: :post }) do |f| %>
            <%# <%= bootstrap_devise_error_messages! %>

            <div class="form-group">
              <%= f.label :name, class: "label-#{yield(:class_text)}" %>
              <%= f.text_field :name, autofocus: true, autocomplete: 'name',
                                                       required: true,
                                                       maxlength: '50',
                                                       class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :member_groups, class: "label-#{yield(:class_text)}" %>
              <%= f.select :member_groups, options_for_select(User.member_groups),
                                           autocomplete: 'member_groups',
                                           class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :phone_number, class: "label-#{yield(:class_text)}" %>
              <%= f.telephone_field :phone_number, autocomplete: 'phone_number',
                                                   required: true,
                                                   maxlength: '13',
                                                   class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :email, class: "label-#{yield(:class_text)}" %>
              <%= f.email_field :email, autocomplete: 'email',
                                        required: true,
                                        maxlength: '100',
                                        class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password, class: "label-#{yield(:class_text)}" %>
              <%= f.password_field :password, autocomplete: 'current-password',
                                              required: true,
                                              minlength: @minimum_password_length,
                                              maxlength: '30',
                                              class: 'form-control' %>

              <% if @minimum_password_length %>
                <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, class: "label-#{yield(:class_text)}" %>
              <%= f.password_field :password_confirmation, autocomplete: 'current-password',
                                                           required: true,
                                                           minlength: @minimum_password_length,
                                                           maxlength: '30',
                                                           class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.submit "新規登録", class: 'btn btn-primary' %>
              <%= link_to "キャンセル", :back, class: 'btn btn-secondary' %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
