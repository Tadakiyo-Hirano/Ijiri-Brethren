<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8' />
    <title><%= full_title(yield(:title)) %></title>

    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <title>IjiriBrethrenApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css2?family=Kameron:wght@400;700&family=Noto+Sans+JP&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag "vendors/bootstrap-reboot", :media => "all" %>
    <%= stylesheet_link_tag "vendors/swiper.min", :media => "all" %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body data-turbolinks="false">
    <div id="global-container">
      <div id="container">
        <div class="mobile-menu__cover"></div>
        <div class="nav-trigger"></div>
        <%= render 'layouts/header' %>
        <%= render 'layouts/gloval_nav' %>
        <%= render 'layouts/flash_messages' %>
        <div class="container-fluid py-4 <%= devise_controller? ? 'mw-md' : 'mw-xl' %>">
          <%= yield %>
        </div>
        <%= render 'layouts/footer' %>
        < %= render 'layouts/mobile_menu' %>
        <%= debug(params) if Rails.env.development? %>
      </div>
    </div>
  </body>
</html>
